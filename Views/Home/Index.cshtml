
@using PagedList.Mvc;
@model PagedList.IPagedList<WebDT.Models.EF.Product>
    @{
        ViewBag.Title = "Cửa hàng";
        Layout = "~/Views/Shared/_MyLayout.cshtml";
        var newProduct = ViewBag.feature as IEnumerable<WebDT.Models.EF.Product>;
    }
    <div class="slider-area">
        <!-- Slider -->
        @{Html.RenderAction("getHinhChieu", "Default");}
        <!-- ./Slider -->
    </div>


    <div class="taskSearch">
        <h2> Tìm kiếm sản phẩm</h2>

        <div class="container">
            <div class="row">
                <div class="manuwrap ">
                    <div class="manunew">
                        <input type="hidden" id="menuhang" value="0">
