@model IList<WebDT.Models.BanChay>
@(Layout=null)
<div class="col-md-4">
    <div class="single-product-widget">
        <h2 class="product-wid-title">Bán Chạy Nhất</h2>
        <a href="/see-all?filter=san-pham-ban-chay" class="wid-view-more">Xem tất cả</a>
        @foreach (var i in Model.Take(4))
        {
            <div class="single-wid-product">
                <a href="/san-pham/@i.meta/@i.Id"><img src="~/Content/img/@i.HinhAnh" alt="" class="product-thumb"></a>
                <h2><a href="/san-pham/@i.meta/@i.Id">@i.Ten_sp</a></h2>
                <div class="product-wid-rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </div>
                <div class="product-wid-price">
                    @if (i.NewPrice != null)
                    {
                        <ins>@string.Format("{0:0,0đ}", i.NewPrice)</ins>

                        <del>@string.Format("{0:0,0đ}", i.Price)</del>
                    }
                    else
                    {
                        <ins>@string.Format("{0:0,0đ}", i.Price)</ins>
                    }

                </div>
            </div>
        }


    </div>
</div>




