@model WebDT.Models.EF.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Mylayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Xoá Sản Phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div>
                    <h3 style="margin-left:20%">Bạn có thật sự muốn xoá thông tin sản phẩm này?</h3>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayName("Tên sản phẩm:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.name)
                        </dd>

                        <dt>
                            @Html.DisplayName("Giá:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.price)
                        </dd>
                        <dt>
                            @Html.DisplayName("Giá giảm:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.newprice)
                        </dd>

                        <dt>
                            @Html.DisplayName("Hình ảnh:")
                        </dt>

                        <dd>
                            <img src="~/Content/img/@Model.img" />
                        </dd>

                        <dt>
                            @Html.DisplayName("Mô tả:")
                        </dt>

                        <dd>
                            @Html.Raw(Model.description)
                        </dd>

                        <dt>


                        <dt>
                            @Html.DisplayName("meta:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.meta)
                        </dd>

                        <dt>
                            @Html.DisplayName("Hiển thị:")
                        </dt>

                        <dd>
                            @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                        </dd>

                        <dt>
                            @Html.DisplayName("order:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.order)
                        </dd>

                        <dt>
                            @Html.DisplayName("Ngay:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.datebegin)
                        </dd>

                        <dt>
                            @Html.DisplayName("ID danh mục:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.categoryid)
                        </dd>
                        <dt>
                            @Html.DisplayName("Số Lượng:")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.quantity)
                        </dd>

                    </dl>

                    @using (Html.BeginForm("Delete", "products", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Xoá" class="btn btn-default" />
                        </div>
                    }
                </div>
                <div>
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->