@model WebDT.Models.GioHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Mylayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">

            <div class="panel-heading">
                Thông Tin
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Details", "GioHangs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        <h4 style="margin-left:35%">THÔNG TIN CHI TIẾT GIỎ HÀNG HÀNG</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("ID Giỏ hàng:")
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.id)
                            </dd>
                            <dt>
                                @Html.DisplayName("Ngày tạo:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NgayTao)
                            </dd>

                            <dt>
                                @Html.DisplayName("ID KHách hàng:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.IDKhachHang)
                            </dd>

                            <dt>
                                @Html.DisplayName("Tên:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TenKhachHang)
                            </dd>

                            <dt>
                                @Html.DisplayName("Số điện thoại:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.SDTKhachHang)
                            </dd>

                            <dt>
                                @Html.DisplayName("Địa chỉ:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DiaChi)
                            </dd>

                            <dt>
                                @Html.DisplayName("E-Mail:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt>
                                @Html.DisplayName("Nội dung:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NoiDung)
                            </dd>

                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.id }) |
                        @Html.ActionLink("Quay lại danh sách", "Index")
                    </p>
                }
            </div>
        </div>
    </div>
</div>