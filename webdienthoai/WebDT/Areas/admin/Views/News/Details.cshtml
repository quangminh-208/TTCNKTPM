@model WebDT.Models.EF.News

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Mylayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">

            <div class="panel-heading">
                Chi tiết tin tức
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Details", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        <h4 style="margin-left:35%">THÔNG TIN CHI TIẾT TIN TỨC - SỰ KIỆN</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Tiêu đề:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.name)
                            </dd>

                            <dt>
                                @Html.DisplayName("Hình ảnh:")
                            </dt>

                            <dd>
                                <img src="~/Content/img/@Model.img" />
                            </dd>


                            <dt>
                                @Html.DisplayName("Nội dung:")
                            </dt>

                            <dd>
                                @Html.Raw(Model.detail)
                            </dd>

                            <dt>
                                @Html.DisplayName("Ngày tạo")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.datebegin)
                            </dd>

                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.id }) |
                        @Html.ActionLink("Quay lại danh sách", "Index")
                    </p>
                }
                </div>
            </div>
        </div>
    </div>
                    @section _Footer
{
                        <script src="~/Areas/admin/Content/ckfinder/ckfinder.js"></script>
                        <script src="~/Areas/admin/Content/ckeditor/ckeditor.js"></script>

                        <script type="text/javascript">
                            var editor = CKEDITOR.replace("description");
                            var editor = CKEDITOR.replace("description", { height: '600px' });
                            customConfig: '/Areas/admin/Content/ckeditor/config.js';
                        </script>
                        <script>
                            $(function () {
                                $("#name").keyup(function () {
                                    var text = $.trim($(this).val().toLocaleLowerCase());
                                    var text_create;
                                    text_create = text.replace(/á|à|ả|ã|ạ|ă|ắ|ặ|ằ|ẳ|ẵ|â|ấ|ầ|ẩ|ẫ|ậ/g, "a").replace(/\ /g, '-').replace(/đ/g, "d");
                                    $('#meta').val(text_create);
                                }).keyup();
                            });
                        </script>
                    }
